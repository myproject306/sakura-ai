# ══════════════════════════════════════════
# Sakura AI — Environment Variables
# ══════════════════════════════════════════

# Server
NODE_ENV=production
PORT=3001

# Frontend URL (your domain)
FRONTEND_URL=https://sakura.ai

# Database
DATABASE_URL="file:./prisma/dev.db"

# JWT Secrets (change these to strong random strings!)
JWT_SECRET=your_jwt_secret_here
JWT_REFRESH_SECRET=your_jwt_refresh_secret_here

# Stripe
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret
STRIPE_STARTER_PRICE_ID=your_starter_price_id
STRIPE_PRO_PRICE_ID=your_pro_price_id
STRIPE_TEAM_PRICE_ID=your_team_price_id

# AI Providers (add your keys)
GEMINI_API_KEY=your_gemini_api_key
STABILITY_API_KEY=your_stability_api_key
ELEVENLABS_API_KEY=your_elevenlabs_api_key
BING_SEARCH_KEY=your_bing_search_key

# Azure OpenAI / Copilot (optional)
COPILOT_API_KEY=your_copilot_api_key
COPILOT_ENDPOINT=https://YOUR-RESOURCE.openai.azure.com
COPILOT_DEPLOYMENT=gpt-4o

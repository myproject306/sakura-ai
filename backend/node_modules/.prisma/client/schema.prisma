// ══════════════════════════════════════════
// Sakura AI — Prisma Schema
// SQLite for dev, PostgreSQL for production
// ══════════════════════════════════════════

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// ── User ──────────────────────────────────
model User {
  id                   String    @id @default(cuid())
  email                String    @unique
  name                 String?
  firstName            String?
  lastName             String?
  passwordHash         String?
  googleId             String?   @unique
  avatar               String?
  role                 String    @default("user") // user | admin
  plan                 String    @default("free") // free | starter | pro | team
  stripeCustomerId     String?   @unique
  stripeSubscriptionId String?   @unique
  subscriptionStatus   String? // active | trialing | past_due | canceled | incomplete
  trialEndsAt          DateTime?
  currentPeriodEnd     DateTime?
  credits              Int       @default(100) // for image/audio/video tools
  monthlyTokensUsed    Int       @default(0)
  lastTokenReset       DateTime  @default(now())
  isActive             Boolean   @default(true)
  createdAt            DateTime  @default(now())
  updatedAt            DateTime  @updatedAt

  projects Project[]
  usages   Usage[]
}

// ── Project (saved AI outputs) ────────────
model Project {
  id         String   @id @default(cuid())
  userId     String
  title      String
  toolName   String
  category   String // writing | image | audio | code | data | study | business
  input      String // JSON string of structured input params
  output     String // AI-generated output (text, URL, base64)
  outputType String   @default("text") // text | image | audio | code
  isFavorite Boolean  @default(false)
  createdAt  DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

// ── Usage Tracking ────────────────────────
model Usage {
  id          String   @id @default(cuid())
  userId      String
  toolName    String
  category    String
  tokensUsed  Int      @default(0)
  creditsUsed Int      @default(0)
  durationMs  Int      @default(0) // response time in ms
  success     Boolean  @default(true)
  createdAt   DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

// ── Templates Library ─────────────────────
model Template {
  id          String   @id @default(cuid())
  title       String
  category    String
  emoji       String
  description String
  prompt      String // structured prompt template
  variables   String   @default("[]") // JSON array of variable names
  uses        Int      @default(0)
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
}

// ── Error / Request Logs ──────────────────
model ErrorLog {
  id        String   @id @default(cuid())
  userId    String?
  toolName  String?
  endpoint  String?
  error     String
  stack     String?
  severity  String   @default("error") // info | warn | error | critical
  createdAt DateTime @default(now())
}

// ── Webhook Events (idempotency) ──────────
model WebhookEvent {
  id          String    @id
  type        String
  processed   Boolean   @default(false)
  processedAt DateTime?
  createdAt   DateTime  @default(now())
}
